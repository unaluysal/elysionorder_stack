@model ElysionOrder.Application.Services.Dtos.BillDto

@{
    ViewData["Title"] = "Stok Ürünleri";


}



<div class="middle-content container-xxl p-0">

    <!--  BEGIN BREADCRUMBS  -->
    <div class="secondary-nav">
        <div class="breadcrumbs-container" data-page-heading="Satış Ürünleri">
            <header class="header navbar navbar-expand-sm">
                <a href="javascript:void(0);" class="btn-toggle sidebarCollapse" data-placement="bottom">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-menu"><line x1="3" y1="12" x2="21" y2="12"></line><line x1="3" y1="6" x2="21" y2="6"></line><line x1="3" y1="18" x2="21" y2="18"></line></svg>
                </a>
                <div class="d-flex breadcrumb-content">
                    <div class="page-header">

                        <div class="page-title">
                        </div>

                        <nav class="breadcrumb-style-one" aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a > Stok Ürünleri</a></li>
                                <li class="breadcrumb-item active" aria-current="page"> Devamı</li>

                            </ol>
                        </nav>

                    </div>
                </div>

            </header>
        </div>
    </div>
    <!--  END BREADCRUMBS  -->

    <div class="row invoice layout-top-spacing layout-spacing">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">

            <div class="doc-container">

                <div class="row">

                    <div class="col-xl-12">

                        <div class="invoice-container">
                            <div class="invoice-inbox">

                                <div id="ct" class="">

                                    <div class="invoice-00001">
                                        <div class="content-section">

                                            <div class="inv--head-section inv--detail-section">

                                                <div class="row">

                                                    <div class="col-sm-12 col-12 mr-auto">
                                                       
                                                        <p class="inv-street-addr mt-3"> <strong>Fatura Kesen :  @Model.InvoicerDto.Name</strong> </p>
                                                       

                                                    

                                                    </div>


                                                </div>

                                            </div>

                                            <div class="inv--detail-section inv--customer-detail-section">
                                                <div class="invoice-actions-btn">

                                                    <div class="invoice-action-btn">

                                                        <div class="row">

                                                            <div class="col-xl-12 col-md-3 col-sm-6">
                                                                <a href="/Stock/DeleteBill/@Model.Id" class="btn btn-danger mb-2 me-4">İptal Et</a>
                                                            </div>
                                                        </div>
                                                        <div class="row">

                                                            <div class="col-xl-12 col-md-3 col-sm-6">
                                                                <a href="/Stock/BillDone/@Model.Id" class="btn btn-success mb-2 me-4">Tamamla</a>
                                                            </div>
                                                        </div>
                                                    </div>

                                                </div>
                                            </div>

                                            <div class="inv--product-table-section">
                                                <div class="table-responsive">
                                                    <h5 class="" style="color:orangered">Ekli Ürünler</h5>
                                                    <br />
                                                    <table class="table">
                                                        <thead class="">
                                                            <tr>

                                                               
                                                                <th scope="col">Ürün</th>
                                                                <th scope="col">Fiyat</th>
                                                                <th scope="col">Adet</th>
                                                               
                                                                <th scope="col">İskonto</th>
                                                                <th scope="col">Vergi Tipi</th>
                                                                <th scope="col">Tutar</th>
                                                                <th scope="col">Girdiği Depo</th>
                                                            
                                                                <th scope="col">Action</th>

                                                            </tr>
                                                        </thead>
                                                        <tbody>

                                                            @if (Model != null)
                                                            {
                                                                if (Model.BillItems != null)
                                                                {
                                                                    foreach (var item in Model.BillItems)
                                                                    {

                                                                        <tr>

                                                                          
                                                                            <td>@item.ProductDto.Name</td>
                                                                            <td>@item.Price</td>
                                                                            <td>@item.Piece</td>
                                                                            
                                                                            <td>@item.Discount</td>
                                                                            <td>@item.TaxDto.Name</td>
                                                                            <td>@item.Total </td>
                                                                            <td>@item.StoreDto.Name </td>
                                                                          
                                                                            <td><a href="/Stock/DeleteBillItem/@item.Id" class="shadow-none badge badge-danger">Kalemi Sil</a> </td>

                                                                        </tr>
                                                                    }
                                                                }

                                                            }



                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>


                                            <div class="inv--note">

                                                <div class="row mt-4">
                                                    <div class="col-sm-12 col-12 order-sm-0 order-1">
                                                        <h5>Toplam İskonto : @Model.TotalDiscount </h5>
                                                        <h5>Toplam Tutar : @Model.Total </h5>
                                                    </div>
                                                </div>

                                            </div>

                                        </div>
                                    </div>

                                </div>



                            </div>

                        </div>

                    </div>



                </div>

            </div>

        </div>
    </div>








    @Html.Partial("AddBillItem",new ElysionOrder.Application.Services.Dtos.BillItemDto(){BillId=@Model.Id})




</div>

